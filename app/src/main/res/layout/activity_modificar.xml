<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/copia2"
    tools:context="com.example.alejandro.turismotyc.Modificar">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="251dp"
        android:layout_height="25dp"
        android:text="MODIFICAR REGISTRO"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="357dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:text="Nombres"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="14dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="354dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:text="Apellidos"
        app:layout_constraintTop_toBottomOf="@+id/et_nombre"
        tools:layout_editor_absoluteX="15dp" />

    <EditText
        android:id="@+id/et_nombre"
        android:layout_width="356dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="14dp" />

    <EditText
        android:id="@+id/et_apellido"
        android:layout_width="353dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/bt_modificar"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:background="@android:color/holo_green_dark"
        android:text="Modificar"
        app:layout_constraintTop_toBottomOf="@+id/et_apellido"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/bt_eliminar"
        android:layout_width="168dp"
        android:layout_height="43dp"
        android:layout_marginTop="116dp"
        android:background="@android:color/holo_green_dark"
        android:text="ELIMINAR"
        app:layout_constraintEnd_toEndOf="@+id/et_apellido"
        app:layout_constraintTop_toBottomOf="@+id/et_apellido" />

</android.support.constraint.ConstraintLayout>
